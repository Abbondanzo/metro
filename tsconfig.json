{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["./packages/*/types/**/*.d.ts"],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "skipLibCheck": false,
    "paths": {
      "metro": ["./packages/metro/types"],
      "metro/src/*": ["./packages/metro/types/*"],
      "metro-*": ["./packages/metro-*/types"]
    }
  }
}
